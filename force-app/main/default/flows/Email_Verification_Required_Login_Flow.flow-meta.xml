<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <actionCalls>
        <description>Sends a verification email to the User using the Apex Class &apos;SendVerificationEmailAction&apos; which is an InvocableMethod.</description>
        <name>Send_Verification_Email</name>
        <label>Send Verification Email</label>
        <locationX>407</locationX>
        <locationY>350</locationY>
        <actionName>SendVerificationEmailAction</actionName>
        <actionType>apex</actionType>
        <connector>
            <targetReference>Action_Requested_Message</targetReference>
        </connector>
        <flowTransactionModel>Automatic</flowTransactionModel>
        <inputParameters>
            <name>userId</name>
            <value>
                <elementReference>LoginFlow_UserId</elementReference>
            </value>
        </inputParameters>
        <nameSegment>SendVerificationEmailAction</nameSegment>
        <versionSegment>1</versionSegment>
    </actionCalls>
    <apiVersion>61.0</apiVersion>
    <decisions>
        <description>Check the Two Factor Registration record after the email to determine if the User Verified Email is set to True or False.</description>
        <name>Did_User_Click_Email_Verification_Link</name>
        <label>Did User Click Email Verification Link?</label>
        <locationX>407</locationX>
        <locationY>674</locationY>
        <defaultConnector>
            <targetReference>Is_Resend_Email_Checked</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Email_Verification_Info.HasUserVerifiedEmailAddress</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <label>Yes</label>
        </rules>
    </decisions>
    <decisions>
        <description>Check the Two Factor Registration record to determine if the User Verified Email is set to True or False.</description>
        <name>Has_User_Verified_Email_Address</name>
        <label>Has User Verified Email Address</label>
        <locationX>176</locationX>
        <locationY>242</locationY>
        <defaultConnector>
            <targetReference>Send_Verification_Email</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Not Verified</defaultConnectorLabel>
        <rules>
            <name>Verified</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Get_Email_Verification_Info.HasUserVerifiedEmailAddress</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <label>Verified</label>
        </rules>
    </decisions>
    <decisions>
        <description>Did the User request that the Verification Email be resent?</description>
        <name>Is_Resend_Email_Checked</name>
        <label>Is Resend Email Checked?</label>
        <locationX>605</locationX>
        <locationY>782</locationY>
        <defaultConnector>
            <isGoTo>true</isGoTo>
            <targetReference>Action_Requested_Message</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes_Resend_Email</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>Resend_Email</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <isGoTo>true</isGoTo>
                <targetReference>Send_Verification_Email</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
